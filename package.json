{
  "name": "yakosa-node",
  "version": "0.1.0",
  "description": "Getting started with express framework",
  "main": "index.js",
  "repository": "git@github.com:MrColorado/Getting-Started-Express.git",
  "author": "Theo Issarni <theo.issarni@eptia.fr>",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^5.3.0",
    "body-parser": "^1.19.0",
    "chai-http": "^4.3.0",
    "express": "^4.17.3",
    "multer": "^1.4.1",
    "nodemon": "^1.19.0",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.7.7",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "typeorm": "0.2.13",
    "typeorm-fixtures-cli": "^1.1.3",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/multer": "^1.3.7",
    "@types/node": "^11.13.11",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "standard": "^12.0.1",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "watch": "nodemon -e ts -w ./src -x npm run start",
    "lint": "tslint -p tsconfig.json src/**.ts",
    "fixtures": "ts-node -r tsconfig-paths/register node_modules/.bin/fixtures",
    "build": "tsc",
    "test": "NODE_ENV=test nyc mocha --timeout 5000 -r ts-node/register -r tsconfig-paths/register src/tests/**/*.test.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "standard": "standard"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
